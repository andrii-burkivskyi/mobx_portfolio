{
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "rootDirs": ["src", "stories"],
        "baseUrl": "src",
        "lib": [
            "dom",
            "esnext",
            "es5",
            "es2015.promise"
        ],
        "declaration": false,
        "noImplicitAny": false,
        "importHelpers": true,
        "suppressImplicitAnyIndexErrors": false,
        "noImplicitReturns": false,
        "allowJs": true
    },
    "baseUrl": "src",
    "paths": {
      "components/*": [ "components/*" ],
      "assets/*": [ "assets/*" ],
      "containers/*": [ "containers/*" ],
      "core/*": [ "core/*" ],
      "pages/*": [ "pages/*" ],
      "utils/*": [ "utils/*" ],
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*",
        "scripts"
    ]
}